<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gvLight"
    android:orientation="vertical">

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:padding="0dp">

        <Button
            android:id="@+id/connection_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:backgroundTint="@color/gvDark"
            android:text="@string/app_name"
            android:textColor="#FFFFFF"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:hapticFeedbackEnabled="true"
            tools:visibility="visible" />

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingHorizontal="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/connection_status"
            app:layout_constraintVertical_bias="0.0">

<!--            <Spinner-->
<!--                android:id="@+id/modeSpinner2"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="30dp"-->
<!--                android:layout_weight="1"-->
<!--                android:background="#FFFFFF"-->
<!--                android:scrollbarSize="10dp"-->
<!--                android:spinnerMode="dropdown" />-->

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/freqContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/motorAContainer">

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:id="@+id/linearLayout0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingHorizontal="30dp"
            android:paddingVertical="5dp"
            app:flow_horizontalAlign="center"
            app:layout_constraintTop_toBottomOf="@+id/connection_status"
            tools:layout_editor_absoluteX="0dp">

            <TextView
                android:id="@+id/freqLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/allMotorsText"
                android:textAlignment="center"
                android:textColor="@color/textColorLight"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/motorFreqTextBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:ems="1"
                android:inputType="number|numberDecimal|numberSigned"
                android:text="@string/motorFreqStartValue"
                android:textAlignment="center"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/timeoutText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/timeoutText"
                android:textAlignment="center"
                android:textColor="@color/textColorLight"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/motorTimeoutTextBox"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:ems="1"
                android:inputType="number|numberDecimal|numberSigned"
                android:text="@string/motorTimeoutStartValue"
                android:textAlignment="center"
                android:textSize="16sp" />
        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/motorAContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout0">
            <LinearLayout
                android:id="@+id/MA_dutyLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingHorizontal="30dp"
                android:paddingVertical="5dp"
                app:flow_horizontalAlign="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/motorALabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/motorAText"
                    android:textAlignment="center"
                    android:textColor="@color/textColorLight"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/motorADutyLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    android:text="@string/dutyCycleTextMinimal"
                    android:textAlignment="textEnd"
                    android:textColor="@color/textColorLight"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/dutyCycleATextBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#FFFFFF"
                    android:ems="1"
                    android:inputType="number|numberDecimal|numberSigned"
                    android:maxLength="3"
                    android:text="@string/motorDutyStartVal"
                    android:textAlignment="center"
                    android:textSize="16sp" />

                <SeekBar
                    android:id="@+id/MAdutySel"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:progress="100" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/MA_dutyLayout"
                tools:layout_editor_absoluteX="378dp">

                <Button
                    android:id="@+id/motorACcw"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:enabled="false"
                    android:text="@string/motorCcwText"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/motorAStop"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:enabled="false"
                    android:text="@string/motorStopText" />

                <Button
                    android:id="@+id/motorACw"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:enabled="false"
                    android:text="@string/motorCwText" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/motorBContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            tools:layout_editor_absoluteY="278dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/motorAContainer">

            <LinearLayout
                android:id="@+id/MB_dutyLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingHorizontal="30dp"
                android:paddingVertical="5dp"
                app:flow_horizontalAlign="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/motorBLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/motorBText"
                    android:textAlignment="center"
                    android:textColor="@color/textColorLight"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/motorBDutyLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    android:text="@string/dutyCycleTextMinimal"
                    android:textAlignment="textEnd"
                    android:textColor="@color/textColorLight"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/dutyCycleBTextBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#FFFFFF"
                    android:ems="1"
                    android:inputType="number|numberDecimal|numberSigned"
                    android:maxLength="3"
                    android:text="@string/motorDutyStartVal"
                    android:textAlignment="center"
                    android:textSize="16sp" />

                <SeekBar
                    android:id="@+id/MBdutySel"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:progress="100" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/MB_dutyLayout"
                tools:layout_editor_absoluteX="378dp">

                <Button
                    android:id="@+id/motorBCcw"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:enabled="false"
                    android:text="@string/motorCcwText"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/motorBStop"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:enabled="false"
                    android:text="@string/motorStopText" />

                <Button
                    android:id="@+id/motorBCw"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:enabled="false"
                    android:text="@string/motorCwText" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/motorCContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            tools:layout_editor_absoluteY="278dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/motorBContainer">

            <LinearLayout
                android:id="@+id/MC_dutyLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingHorizontal="30dp"
                android:paddingVertical="5dp"
                app:flow_horizontalAlign="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/motorCLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/motorCText"
                    android:textAlignment="center"
                    android:textColor="@color/textColorLight"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/motorCDutyLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    android:text="@string/dutyCycleTextMinimal"
                    android:textAlignment="textEnd"
                    android:textColor="@color/textColorLight"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/dutyCycleCTextBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#FFFFFF"
                    android:ems="1"
                    android:inputType="number|numberDecimal|numberSigned"
                    android:maxLength="3"
                    android:text="@string/motorDutyStartVal"
                    android:textAlignment="center"
                    android:textSize="16sp" />

                <SeekBar
                    android:id="@+id/MCdutySel"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:progress="100" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/MC_dutyLayout"
                tools:layout_editor_absoluteX="378dp">

                <Button
                    android:id="@+id/motorCCcw"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:enabled="false"
                    android:text="@string/motorCcwText"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/motorCStop"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:enabled="false"
                    android:text="@string/motorStopText" />

                <Button
                    android:id="@+id/motorCCw"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:enabled="false"
                    android:text="@string/motorCwText" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/powerOffBt"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_marginBottom="32dp"
            android:backgroundTint="#FF6600"
            android:enabled="false"
            android:text="@string/motorsOffText"
            app:layout_constraintBottom_toBottomOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>